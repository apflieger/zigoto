<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        {% block title %}{% template_tree_section title %}{% endblock %}

        <link rel="stylesheet" href="/build/lib/bootstrap.min.css" />
        {% block external_stylesheets %}
            {% template_tree_section external_stylesheets optional %}
            <link rel="stylesheet" href="/build/css/{{ template_tree_branch }}/imports.css" />
        {% endblock %}

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics{{ app.environment == 'prod' ? '' : '_debug' }}.js','ga');

            {% if app.environment == 'prod' %}
            {% set trackingId = 'UA-74168413-1' %}{# Zigotoo_prod #}
            {% else %}
            {% set trackingId = 'UA-74168413-2' %}{# Zigotoo_dev #}
            {% endif %}
            ga('create', '{{ trackingId }}', 'auto');
            ga('send', 'pageview');
        </script>
    </head>
    <body>
        <nav class="global-header navbar navbar-default navbar-fixed-top">
            <div class="container">
                <a href="/" class="navbar-brand">Zigotoo</a>
                <span class="navbar-text navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        {{ app.user.email }} - <a href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}">Connexion</a> / <a href="{{ path('fos_user_registration_register') }}">Inscription</a>
                    {% endif %}
                </span>
            </div>
        </nav>

        {% block content %}{% template_tree_section content %}{% endblock %}

        <footer class="global-footer container">
            <a href="/qui-sommes-nous">Qui sommes nous ?</a>
        </footer>

        {% block javascripts %}{% template_tree_section javascripts optional %}{% endblock %}

    </body>
</html>
